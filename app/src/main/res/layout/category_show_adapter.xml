<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="8dp">

    <!-- Used for the ripple effect on touch -->
    <RelativeLayout
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:padding="12dp"
        android:elevation="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/category_icon"
            android:background="@drawable/ge"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="siusiak"
            android:id="@+id/category_name"
            android:singleLine="true"
            android:layout_alignTop="@+id/category_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textView2"
            android:layout_toRightOf="@+id/category_icon"
            android:layout_toEndOf="@+id/category_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Angielski"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/category_icon"
            android:layout_toRightOf="@+id/category_icon"
            android:layout_toEndOf="@+id/category_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="45"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/category_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/category_count"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>