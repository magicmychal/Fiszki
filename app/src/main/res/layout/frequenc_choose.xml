<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_title_notification"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency_1"
        android:id="@+id/freq_choose_1"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency_5"
        android:id="@+id/freq_choose_2"
        android:layout_below="@+id/freq_choose_1"
        android:layout_alignLeft="@+id/freq_choose_1"
        android:layout_alignStart="@+id/freq_choose_1"
        android:layout_marginTop="16dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency_15"
        android:id="@+id/freq_choose_3"
        android:layout_below="@+id/freq_choose_2"
        android:layout_alignLeft="@+id/freq_choose_2"
        android:layout_alignStart="@+id/freq_choose_2"
        android:checked="false"
        android:layout_marginTop="16dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency_30"
        android:id="@+id/freq_choose_4"
        android:layout_below="@+id/freq_choose_3"
        android:layout_alignLeft="@+id/freq_choose_3"
        android:layout_alignStart="@+id/freq_choose_3"
        android:layout_marginTop="16dp"
        android:textSize="20dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_action_cancel"
        android:id="@+id/freq_choose_btn"
        android:layout_below="@+id/freq_choose_4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>