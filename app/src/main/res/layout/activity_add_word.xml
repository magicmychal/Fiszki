<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".addWord.AddWordActivity"
    android:screenOrientation="portrait">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputWord"
        android:hint="@string/add_new_flashcard_word"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"
        app:met_primaryColor="@color/ColorPrimaryDark"
        app:met_floatingLabelTextSize="20dp"/>

    <requestFocus />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputTranslation"
        android:hint="@string/add_new_flashcard_translation"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"
        app:met_primaryColor="@color/ColorPrimaryDark"
        android:layout_below="@+id/inputWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:met_floatingLabelTextSize="20dp"
        android:layout_marginTop="0dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CategorySpinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/add_new_flashcard_category"
        android:id="@+id/textView4"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        android:layout_below="@+id/inputTranslation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
