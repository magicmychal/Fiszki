<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootSecondPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription"
    tools:background="@color/pressed_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/TutSecondImage"

        android:layout_width="wrap_content"
        android:layout_height="900dp"

        android:src="@drawable/tutsecond_pl"

        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:text="@string/tutorial_settings_repeat"
        android:textColor="@android:color/white"
        android:textSize="30sp"

        app:layout_heightPercent="35%"
        app:layout_marginBottomPercent="9%"
        app:layout_widthPercent="100%"
        android:layout_marginBottom="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>